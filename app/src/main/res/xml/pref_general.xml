<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="@string/alarm_key"
        android:summary="@string/use_alarm"
        android:title="@string/use_alarm" />

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:defaultValue="@string/pref_default_update_intervall"
        android:inputType="number"
        android:key="@string/update_intervall_key"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/update_intervall" />

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="@string/use_notification_key"
        android:summary="@string/use_notification"
        android:title="@string/use_notification" />

</PreferenceScreen>
